<div class="sharedmargin">
    <div class="container-md">
      <%= render "shared/flash_message" %>
      <div class='row'>
        <h3 class="text-white col-sm-12  m-4 font-italic"><%= @user.name%>さんの会員詳細</h3>
      </div>
      <div class='row mt-2'>
        <div class="col-12 m-4 topfont">
          <div class="card-deck" style="width: 50rem;">
            <div class="card text-white border-dark mb-3 bg-dark ">
                <%= attachment_image_tag(@user, :profile_image, size: "240x180", fallback: "profilenoimage.jpeg",class: "profileimg card-img-top img-fluid") %>
              <div class="card-body">
                <p class="card-text">User ID : <%= @user.id %></p>
                <p class="card-title">User Name : <%= @user.name %></p>
                <p class="card-text">User Introduction : <%= @user.introduction %></p>
                <p class="card-text">User Email : <%= @user.email %></p>
                <p class="card-text">
                  <% if @user.is_deleted %>
                    <span class="text-danger">Status 退会</span>
                  <% else %>
                    <span class="text-success">Status 有効</span>
                  <% end %>
                </p>
                <p class="card-text"><%= link_to "Edit", edit_admin_user_path(@user), class:"btn btn-success" %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>