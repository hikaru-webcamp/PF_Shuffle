  <div class="sharedmargin">
    <div class="container-md">
      <%= render "shared/flash_message" %>
      <h3 class="text-white font-italic">会員一覧</h3>
          
      <div class='row mt-2'>
        <% @users.each do |user| %>
          <div class="col-sm-3 col-xs-6 m-4 ">
            <div class="card-deck" style="width: 20rem;"> <!--連結しないで表示したい場合は、card-deck-->
              <div class="card text-white border-dark mb-3 bg-dark ">
                <%= link_to admin_user_path(user.id),class: "profileimg" do %>
                  <%= attachment_image_tag(user, :profile_image, size: "240x180", fallback: "profilenoimage.jpeg",class: "profileimg ccard-img-top img-fluid") %>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title font-weight-bold"><%= user.name %></h5>
                  <p class="card-text"><%= user.introduction %></p>
                  <p class="card-text"><%= user.email %></p>
                   <% if user.is_deleted %>
                    <p class="card-text text-danger">ステータス: 退会</p>
                  <% else %>
                    <p class="card-text text-success">ステータス: 有効</p>
                  <% end %> 
                </div>
              </div>
            </div>
          </div>
        <% end %> 
      </div>
    </div>
  </div>