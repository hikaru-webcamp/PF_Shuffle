<div class="backimg">
  <div class='container px-5 px-sm-0'>
    <%= render "shared/flash_message" %>
    <div class='row mt-5'>
      <div class="col-12">
        <h2 class="mt-4 text-white">会員一覧</h2>
        <table class="table table-dark">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>プロフィール画像</th>
              <th>ニックネーム</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr class="table-active">
                <td>
                  <%= user.id %>
                </td>
                <td>
                  <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
                </td>
                <td>
                  <%= link_to admin_user_path(user.id) do %>
                  <%= user.name %>
                  <% end %>
                </td>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <% if user.is_deleted %>
                    <span class="text-danger">退会</span>
                  <% else %>
                    <span class="text-success">有効</span>
                  <% end %> 
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
