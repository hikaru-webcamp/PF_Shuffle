  <div class="sharedmargin">
    <div class="container container-m">
  <%= render "shared/flash_message" %>
    <div class='row mt-5'>
      <div class="col-12">
      <h3 class="text-white ">グループ詳細</h3>
        
        <table class="table table-dark w-100">
          <thead>
            <tr>
              <th>グループイメージ</th>
              <th>グループ名</th>
              <th>グループ紹介文</th>
              <th>メンバー数</th>
              <th>グループメンバー(作成者以外)</th>
            </tr>
          </thead>
          <tbody>
              <tr class="table-active">
                <td><%= attachment_image_tag(@group, :image, size: "240x180", fallback: "grouptest.png") %></td>
                <td><%= @group.name %></td>
                <td><%= @group.introduction %></td>
                <td><%= @group.users.count %></td>
                <td>
                  <% @group.users.each do |member| %>
                    <%= member.name %>
                  <% end %>
                </td>
                  <% if @group.owner_id == current_user.id %>
                    <td><%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %></td>
                    <td><%= link_to 'Destroy', group_path(@group), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
                  <% elsif @group.users.include?(current_user) %>
                    <td><%= link_to "グループから脱退", group_groupout_path(@group), method: :delete, class: "btn btn-sm btn-danger" %></td>
                  <% else %>
                    <td><%= link_to 'グループに加入', group_join_path(@group), class: 'btn btn-sm btn-success' %></td>
                  <% end %>
                </td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>