<div class="backimg">
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class="col-12">
        <h2 class="mt-4 text-white">コミュニティ一覧</h2>
        <table class="table table-dark w-100">
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Introduction</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <% @groups.each do |group| %>
              <tr class="table-active">
                <td><%= attachment_image_tag(group, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
                <td><%= group.name %></td>
                <td><%= group.introduction %></td>
                <td><%= link_to 'Show', group_path(group) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>