<div class="backimg">
  <div class='container px-5 px-sm-0'>
  <div class="row text-white">
    <div class="col-md-10 col-lg-8 col-xl-6 mx-auto">
      <h2 class="mt-4 text-center">コミュニティ新規登録</h2>
      
      <%= form_with model:@group,local:true do |f| %>
        <div class="form-group row">
          <%= f.label :image, "グループ画像", class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <div class="custom-file">
              <%= f.attachment_field :image, class: "custom-file-input" %>
              <%= f.label :image, "グループ画像を選択", class: "custom-file-label" %>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :name, "グループ名", class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= f.text_area :name, placeholder: "グループ名を記述して下さい",class: "form-control" %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :introduction, "グループの説明", class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= f.text_area :introduction, placeholder: "こちらにグループの説明文を記述して下さい",class: "form-control" %>
          </div>
        </div>
        
        <div class="form-group row">
          <div class="col-12 text-right">
            <%= f.submit "新規登録", class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>