<% content_for :title, "新規会員登録" %>
<div class="sharedmargin">
  <div class="container-md shadow-lg p-3">
    <div class="col-sm-4 mx-auto text-center"><%= render "shared/flash_message" %></div>
    <%= render "shared/form_error", model: @user %>
    <div class="row">
      <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto text-white">
        <h2 class="mb-3 ml-sm-n2 text-center mt-5">新規会員登録</h2>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <div class="form-group col-sm-12">
          <%= f.text_field :name, autofocus: true,  placeholder: "\uf007 名前を入力して下さい", class:"form-control fa w-100" %>
        </div>

        <div class="form-group col-sm-12">
          <%= f.email_field :email, autocomplete: "email", placeholder: "\uf0e0 メールアドレスを入力して下さい", class:"form-control fa" %>
        </div>

        <div class="form-group col-sm-12">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "\uf023 パスワードを入力して下さい(6文字以上)", class:"form-control fa" %>
        </div>

        <div class="form-group col-sm-12">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "\uf023 パスワードを入力して下さい(確認用)", class:"form-control fa" %>
        </div>

        <div class="form-group col-sm-12">
          <%= f.submit "新規登録", class: "btn btn-outline-light form-control topfont hover-img" %>
        </div>
        <% end %>

        <h4 class="mb-3 mt-5">既に登録済みの方</h4>
        <p class="pl-3"><%= link_to "こちら", new_user_session_path %> からログインして下さい。</p>
      </div>
    </div>
  </div>
</div>
