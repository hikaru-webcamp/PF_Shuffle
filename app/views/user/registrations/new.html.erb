<div class="sharedmargin">
  <div class="container-md">
    <%= render "shared/flash_message" %>
    <div class="row">
      <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto text-white topfont text-center">
          <h2 class="mb-3 ml-sm-n2 text-center">新規会員の登録</h2>
  
        <%= form_with model: @user, url: user_registration_path, local: true, class: "pl-sm-4" do |f| %>
          <%= render "shared/form_error", model: @user %>
          <div class="form-group row">
              <%= f.text_field :name, autofocus: true,  placeholder: "名前を入力して下さい", class:"form-control" %>
          </div>
  
          <div class="form-group row">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力して下さい", class:"form-control" %>
          </div>
  
          <div class="form-group row">
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力して下さい(6文字以上)", class:"form-control" %>
          </div>
  
          <div class="form-group row">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "再度パスワードを入力して下さい", class:"form-control" %>
          </div>
  
          <div class="form-group row">
              <%= f.submit "Sign up", class: "btn btn-secondary form-control topfont hover-img" %>
          </div>
        <% end %>
  
        <h4 class="mb-3 mt-5">既に登録済みの方</h4>
        <p class="pl-3"><%= link_to "こちら", new_user_session_path %> からログインして下さい。</p>
      </div>
    </div>
  </div>
</div>