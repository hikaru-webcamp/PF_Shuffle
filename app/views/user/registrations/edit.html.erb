<% content_for :title, "パスワード変更" %>
<!--部分テンプレートにより@user➩user変更-->
<div class="sharedmargin">
  <div class="container-md shadow-lg p-3">
    <%= render 'shared/form_error', model: @user %>
    <div class='row'>
      <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto text-white">
        <!--ユーザー側の記述-->
        <h2 class="mb-3 ml-sm-n2 text-center mt-5">会員パスワード変更</h2>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <div class="form-group col-sm-12">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "\uf0e0 メールアドレスを入力して下さい", class: "form-control fa" %>
        </div>
        <div class="form-group col-sm-12">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "\uf023 新しいパスワードを入力して下さい", class: "form-control fa" %>
        </div>
        <div class="form-group col-sm-12">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "\uf023 パスワードを入力して下さい（確認用）", class: "form-control fa" %>
        </div>
        <div class="form-group col-sm-12">
          <%= f.password_field :current_password, autocomplete: "current-password",  placeholder: "\uf023 現在のパスワードを入力して下さい", class: "form-control fa" %>
        </div>
        <div class="form-group col-sm-12">
          <%= f.submit class: "btn btn-outline-light form-control hover-img" %>
        </div>
        <% end %>
        <%= link_to "戻る", :back, class: "btn btn-outline-light hover-img mt-4" %>
      </div>
    </div>
  </div>
</div>
