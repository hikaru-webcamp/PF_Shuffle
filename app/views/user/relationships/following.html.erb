<% content_for :title, "フォロー中" %>
<div class="sharedmargin">
  <div class="container-fluid shadow-lg p-3">
    <div class="col-sm-4 mx-auto" ><%= render "shared/flash_message" %></div>
      <div class="row m-1">
        <!--管理側とユーザー側のユーザー詳細ページをパーシャル化-->
        <%= render "shared/user_showcard", user: @user %>
    
          <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 mx-auto">
            <nav class="nav nav-pills nav-justified mb-5">
              <%= link_to "フォロー中", "#", class: "nav-item nav-link active hover-img bg-light text-dark" %>
              <%= link_to "フォロワー", follower_user_relationships_path(@user), class: "nav-item nav-link hover-img bg-dark text-white" %>
            </nav>
            
            <!--ユーザー側のグループ一覧と検索結果ビューをパーシャル化-->
            <%= render "shared/user_index_follow", users: @following_users %>
          </div>
      </div>
  </div>
</div>
