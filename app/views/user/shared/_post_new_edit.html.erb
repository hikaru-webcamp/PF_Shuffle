<!--部分テンプレートにより@group➩group変更-->
       <!--グループの情報と空のインスタンスを代入-->
<%= form_with model:[group, post], local: true do |f| %>
  <div class="col-md-12">
    <div class="form-group row">
      <h3 class="col-form-label">題名</h3>
      <%= f.text_field :title, placeholder: "題名を記述して下さい", class: 'form-control' %>
    </div>
    <div class="form-group row">
      <h3 class="col-form-label">本文</h3>
      <%= f.text_area :body, placeholder: "本文を記述して下さい", :size=>"60x10" , class: 'form-control' %>
    </div>
    <div class="form-group row">
      <%= f.submit class: 'btn btn-success form-control' %>
    </div>
  </div>
<% end %> 