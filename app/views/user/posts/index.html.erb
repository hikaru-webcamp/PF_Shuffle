<div class="sharedmargin">
  <div class="container-fluid shadow-lg p-3">
    <div class="col-sm-4 mx-auto text-center" ><%= render "shared/flash_message" %></div>
    <!--post indexとの部分テンプレート-->
     <%= render "shared/group_showcard_form", group: @group %>
    <div class="row mx-auto m-5">
      <div class="col-xl-4 col-lg-6 col-md-8 col-sm-8 mx-auto">
        <nav class="nav nav-pills nav-justified mb-2">
          <%= link_to "メンバー", group_path(@group.id), class: "nav-item nav-link hover-img bg-dark text-white" %>
          <%= link_to "投稿一覧", "#", class: "nav-item nav-link active hover-img bg-light text-dark" %>
        </nav>
      </div>
    </div>
    <div class='row scroll-list jscroll mx-auto'>
      <% @posts.each do |post| %>
        <div class="col-xl-2 col-lg-2 col-md-4 col-sm-6">
          <div class="mb-4 card-deck hover-img"> <!--連結しないで表示したい場合は、card-deck-->
            <div class="card text-dark border-dark mb-3 bg-light">
                <%= link_to group_post_path(@group,post) do %>
                  <%= attachment_image_tag(post.user, :profile_image, size: "180x180", fallback: "profilenoimage.jpg",class: "profileimg card-img-top img-fluid") %>
                <% end %>
              <div class="card-body">
                <h5 class="card-title font-weight-bold border-bottom">題名：<%= post.title.truncate(10) %></h5>
                <p class="card-text border-bottom">本文：<%= post.body.truncate(15, separator: "。")%></p>
                <p class="card-text"><%= time_ago_in_words(post.created_at) %>前に作成</p>
                <span>
                  <% if post.user.id == current_user.id %>
                      <%= link_to edit_group_post_path(@group,post), class: "hover-img m-1 ml-3 fa-2x text-reset text-decoration-none" do %>
                        <i class="far fa-edit"></i>
                      <% end %>
                      <%= link_to group_post_path(@group,post), method: :delete, data: { confirm: '本当に投稿を消しますか？' }, class: "hover-img m-1 fa-2x text-reset text-decoration-none" do%>
                        <i class="far fa-trash-alt"></i>     
                      <% end %>
                  <% end %>
                </span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="jscroll-pagination"><%= paginate @posts %></div>
    </div>
  </div>
</div>