<div class="backimg">
  <div class='container px-5 px-sm-0'>
    <div class='row mt-5'>
      <div class='col-md-3'>
        <h2 class="mt-4 text-white">会員情報</h2>
        <table class='table text-white'>
          <tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %></tr>
          <tr>
        	  <th>ユーザー名</th>
        	  <th><%= @user.name %></th>
          </tr>
          <tr>
        	  <th>自己紹介文</th>
        	  <th><%= @user.introduction %></th>
          </tr>
        </table>
        <%= link_to '',edit_user_path(@user.id),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>    
      
      
        <div class='col-md-8 offset-md-1'>
          <h2 class="mt-4 text-white">自分が加入したグループ一覧</h2>
          <table class="table table-dark w-100">
            <thead>
              <tr>
                <th>グループイメージ</th>
                <th>グループ名</th>
                <th>グループ紹介文</th>
                <th>グループメンバー数</th>
              </tr>
            </thead>
            <tbody>
              <% @groups.each do |group| %>
                <tr class="table-active">
                  <td><%= attachment_image_tag(group, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
                  <td><%= group.name %></td>
                  <td><%= group.introduction %></td>
                  <td><%= group.users.count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</div>