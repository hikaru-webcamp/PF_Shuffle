<div class="backimg">
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2 class="mt-4 text-white">会員情報</h2>
        <table class='table text-white'>
          <tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %></tr>
          <tr>
        	  <th>name</th>
        	  <th><%= @user.name %></th>
          </tr>
          <tr>
        	  <th>introduction</th>
        	  <th><%= @user.introduction %></th>
          </tr>
        </table>
      </div>    
      
        <div class='col-md-8 offset-md-1'>
          <h2 class="mt-4 text-white">コミュニティ一覧</h2>
          <table class="table table-dark w-100">
            <thead>
              <tr>
                <th>Group_image</th>
                <th>Group_name</th>
                <th>Group_introduction</th>
              </tr>
            </thead>
            <tbody>
              <%# @groups.each do |group| %>
                <tr class="table-active">
                  <td><%#= attachment_image_tag(group, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
                  <td><%#= group.name %></td>
                </tr>
              <%# end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</div>