<div class="backimg">
  <div class='container px-5 px-sm-0'>
    <%= render "shared/flash_message" %>
    <div class='row text-white'>
      <div class="col-8">
        <h2 class="mt-4 text-white"><%= @user.name%>さんの会員情報編集</h2>
        
        <%= form_with model: @user, url: admin_user_path, local:true do |f| %>
          <%= render 'shared/form_error', model: @user %>
          <div class="form-group row">
              <%= f.label :image,"プロフィール画像",class: "form-label col-sm-3"  %>
            <div class="col-sm-8">
              <%= f.attachment_field :profile_image %>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :name, "ニックネーム", class: "form-label col-sm-3" %>
            <div class="col-sm-8">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :introduction, "自己紹介文", class: "form-label col-sm-3" %>
            <div class="col-sm-8">
            <%= f.text_area :introduction, class: "form-control introduction" %>
            </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :email, "メールアドレス", class: "form-label col-sm-3" %>
            <div class="col-sm-4">
              <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
          
          <div class="form-group row">
            <div class="col-6 col-md-4 offset-md-3">
              <%= f.submit "変更内容を保存", class: "btn btn-success col-sm-12" %>
            </div>
          </div>
          
          <div class="form-group row">
            <div class="col-6 col-md-4 offset-md-3">
              <%= link_to "退会する", user_out_confirm_path(@user.id), class: "btn btn-danger" %>
            </div>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>