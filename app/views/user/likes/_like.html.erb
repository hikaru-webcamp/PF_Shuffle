<!--post.rbにliked_by?モデル定義-->
<% if post.liked_by?(current_user) %>
  <%= link_to  group_post_likes_path(group.id, post.id), method: :delete, remote: true do %>
   <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
  <%= post.likes.count %>
  <% end %>
<% else %>
  <%= link_to  group_post_likes_path(group.id, post.id), method: :post, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true"></i>
    <%= post.likes.count %>
  <% end %>
<% end %>