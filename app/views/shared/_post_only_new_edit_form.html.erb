<!--コメント新規投稿とコメント編集コードをパーシャル化-->
<!--部分テンプレートにより@group➩group変更-->
<!--グループの情報と空のインスタンスを代入-->
<%= form_with model:[group, post], local: true do |f| %>
  <div class="col-md-12">
    <div class="form-group row">
      <h3 class="col-form-label">題名</h3>
      <%= f.text_field :title, placeholder: "\uf249 題名を記述して下さい", class: 'form-control fa' %>
    </div>
    <div class="form-group row">
      <h3 class="col-form-label">本文</h3>
      <%= f.text_area :body, placeholder: "\uf249 本文を記述して下さい", :size=>"60x10" , class: 'form-control fa' %>
    </div>
    <div class="form-group row">
      <h3 class="col-form-label">youtubu投稿URL</h3>
      <%= f.text_field :youtube_url, placeholder: "\uf249 URLを記述して下さい https://www.youtube.com/・・・", :size=>"60x10" , class: 'form-control fa' %>
    </div>
    <div class="form-group row">
      <%= f.submit class: 'btn btn-secondary form-control btn-outline-light  hover-img' %>
    </div>
  </div>
<% end %> 

