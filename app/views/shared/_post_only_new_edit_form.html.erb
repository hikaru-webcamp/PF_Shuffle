<div class="sharedmargin">
  <div class="container-md">
    <%= render "shared/flash_message" %>
    <div class='row mt-2'>
      <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto text-white">
        <% if current_page?(action: "new") %>
          <h2 class="mb-3 ml-sm-n2 text-center">New Post</h2>
        <% else %>
          <h2 class="mb-3 ml-sm-n2 text-center">Edit Post</h2>
         <% end %>
        <!--コメント新規投稿とコメント編集コードをパーシャル化-->
        <!--部分テンプレートにより@group➩group変更-->
        <!--グループの情報と空のインスタンスを代入-->
        <%= form_with model:[group, post], local: true do |f| %>
          <div class="col-md-12">
            <div class="form-group row">
              <h3 class="col-form-label">題名</h3>
              <%= f.text_field :title, placeholder: "\uf249 題名を記述して下さい", class: 'form-control fa' %>
            </div>
            <div class="form-group row">
              <h3 class="col-form-label">本文</h3>
              <%= f.text_area :body, placeholder: "\uf249 本文を記述して下さい", :size=>"60x10" , class: 'form-control fa' %>
            </div>
            <div class="form-group row">
              <%= f.submit class: 'btn btn-success form-control hover-img' %>
            </div>
          </div>
        <% end %> 

      </div>
    </div>
  </div>
</div>