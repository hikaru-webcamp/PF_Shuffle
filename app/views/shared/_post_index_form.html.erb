 <!--@posts ➩ posts @group➩group-->
   <div class='row scroll-list jscroll mx-auto'>
      <% posts.includes(:user).each do |post| %>
        <div class="col-xl-2 col-lg-2 col-md-4 col-sm-6">
          <div class="mb-4 card-deck hover-img">
           
            <div class="card text-white border-dark mb-3 bg-transparent">
                <%= link_to group_post_path(group,post) do %>
                  <%= attachment_image_tag(post.user, :profile_image, size: "180x180", fallback: "profilenoimage.jpg",class: "post-img-top img-fluid") %>
                <% end %>
              <div class="card-body">
                <h5 class="card-title font-weight-bold border-bottom">題名：<%= post.title.truncate(10) %></h5>
                <p class="card-text border-bottom">本文：<%= post.body.truncate(15, separator: "。")%></p>
                <p class="card-text"><%= time_ago_in_words(post.created_at) %>前に作成</p>
                <span>
                  <% if post.user.id == current_user.id %>
                      <%= link_to edit_group_post_path(group,post), class: "hover-img m-1 ml-3 fa-2x text-reset text-decoration-none" do %>
                        <i class="far fa-edit"></i>
                      <% end %>
                      <%= link_to group_post_path(group,post), method: :delete, data: { confirm: '本当に投稿を消しますか？' }, class: "hover-img m-1 fa-2x text-reset text-decoration-none" do%>
                        <i class="far fa-trash-alt"></i>     
                      <% end %>
                  <% end %>
                  <i class="fa fa-heart fa-2x" aria-hidden="true"><%= post.likes.count %></i>
                  <i class="far fa-comment fa-2x ml-2"><%= post.comments.count %></i>
                </span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="jscroll-pagination"><%= paginate posts %></div>
    </div>
    
    
    
    

    
