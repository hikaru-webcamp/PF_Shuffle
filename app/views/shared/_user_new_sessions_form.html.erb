<div class="sharedmargin">
  <div class="container-md shadow-lg p-3">
    <%= render "shared/flash_message" %>
    <div class='row'>
      <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto text-white text-center">
        
        <% if controller.class.parent.name == "Admin" %>
          <h2 class="mb-3 ml-sm-n2 text-center mt-5">管理者ログイン</h2>
          <%= form_with model: admin, url: admin_session_path, local:true, class: "pl-sm-4" do |f| %>
            <div class="form-group col-sm-12">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  placeholder: "\uf0e0 メールアドレスを入力して下さい", class: "form-control fa" %>
            </div>
            <div class="form-group col-sm-12">
                <%= f.password_field :password, autocomplete: "current-password", 
                  placeholder: "\uf023 パスワードを入力して下さい", class: "form-control fa" %>
            </div>
            <div class="form-group col-sm-12">
                <%= f.submit "ログイン", class: "btn btn-outline-light form-control hover-img" %>
            </div>
          <% end %>
          <h5 class="mt-5">テストアカウントでのログイン</h5>
          <h4>email:  admin1@test.com</h4>
          <h4>pass:   testtest</h4>
        
        <% else %>
        
          <h2 class="mb-3 ml-sm-n2 text-center mt-5">会員ログイン</h2>
          <%= form_with model: user, url: user_session_path, local:true, class: "pl-sm-4" do |f| %>
            <div class="form-group col-sm-12">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  placeholder: "\uf0e0 メールアドレスを入力して下さい", class: "form-control fa" %>
            </div>
            <div class="form-group col-sm-12">
                <%= f.password_field :password, autocomplete: "current-password", 
                  placeholder: "\uf023 パスワードを入力して下さい", class: "form-control fa" %>
            </div>
            <div class="form-group col-sm-12">
                <%= f.submit "ログイン", class: "btn btn-outline-light form-control hover-img" %>
            </div>
          <% end %>
          <h4 class="mb-3 mt-5">会員登録がお済みでない方</h4>
          <p class="pl-4"><%= link_to "こちら", new_user_registration_path %> から新規登録を行って下さい。</p>
          <h5 class="mt-5">テストアカウントでのログイン</h5>
          <h4>email:   user1@test.com</h4>
          <h4>pass:   testtest</h4>
          
        <% end %>
  
      </div>
    </div>
  </div>
</div>
