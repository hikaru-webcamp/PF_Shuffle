<div class="col-lg-3 col-md-6 col-sm-8 mx-auto mb-3">
  <div class="mb-4 card-deckr"> <!--連結しないで表示したい場合は、card-deck-->
    <div class="card text-white border-dark mb-3 bg-transparent hover-img">
      <%= link_to group_path(group) do %>
        <%= attachment_image_tag(group, :image, size: "240x180", fallback: "groupnoimage.jpg", class: "card-img-top img-fluid mx-auto d-block" )%>
      <% end %>
      <div class="card-body">
        <h5 class="card-title font-weight-bold  border-bottom"><%= group.name.truncate(15) %></h5>
        <p class="card-text  border-bottom"><%= group.introduction.truncate(20) %></p>
        <p class="card-text border-bottom"><%= group.owner.name %></p>
        <p class="card-text"><i class="fas fa-user-friends mr-2"></i><%= group.users.size %>人</p>
        
         <% if group.users.include?(current_user) %>
            <%= link_to new_group_post_path(group.id), class: "hover-img m-1 fa-2x text-reset text-decoration-none" do %>
              <i class="fas fa-plus-circle"></i>
            <% end %>        
        <% end %>
        
        <% if group.owner_id == current_user.id %>
          <p>
            <%= link_to new_group_post_path(group.id), class: "hover-img m-1 fa-2x text-reset text-decoration-none" do %>
              <i class="fas fa-plus-circle"></i>
            <% end %>
            <%= link_to edit_group_path(group), class: "hover-img m-1 fa-2x text-reset text-decoration-none" do %>
              <i class="far fa-edit"></i>
            <% end %>
            <%= link_to group_path(group), method: :delete, data: { confirm: '本当にグループを消しますか？' }, class: "hover-img m-1 fa-2x text-reset text-decoration-none" do %>            
              <i class="far fa-trash-alt"></i>     
            <% end %>
          </p>

        <% elsif group.member_by?(current_user) %>
            <%= link_to group_groupout_path(group), method: :delete, class: "hover-img m-1 fa-2x text-reset text-decoration-none" do %>
            <i class="fas fa-user-minus"></i>
            <% end %>
        <% else %>
            <%= link_to group_join_path(group), class: "hover-img m-1 fa-2x text-reset text-decoration-none" do%>
            <i class="fas fa-user-plus"></i>
          <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>