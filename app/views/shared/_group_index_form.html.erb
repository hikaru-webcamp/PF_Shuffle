 <!--部分テンプレートにより@groups➩groups変更-->
<div class='row scroll-list jscroll mx-auto fadeUp'>
  <% groups.each do |group| %>
  <!--ページ毎のレスポンス対応-->
    <% if controller.controller_name == "users" %>
      <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
    <% else %>
      <div class="col-xl-2 col-lg-2 col-md-4 col-sm-6">
    <% end %>
      <div class="mb-4 card-deck">
        <div class="card text-white border-dark mb-3 bg-transparent hover-img" >
          <%= link_to group_path(group) do %>
            <%= attachment_image_tag(group, :image, size: "240x180", fallback: "groupnoimage.jpg", class: "card-img-top img-fluid mx-auto d-block" )%>
          <% end %>
          <div class="card-body">
            <h5 class="card-title font-weight-bold text-truncate"><%= group.name %></h5>
            <p class="card-text text-truncate"><%= group.introduction %></p>
            <span>リーダー名</span>
            <p class="card-text">
            <%= link_to user_path(group.owner) do %>
              <span><%= group.owner.name %></span>
            <% end %>
            </p>
            <p class="card-text"><i class="fas fa-user-friends mr-2"></i><%= group.users.size %>人</p>
          </div>
        </div>
      </div>
    </div>
    <div class="jscroll-pagination">
    <%= paginate groups %>
    </div>
  <% end %> 
</div>