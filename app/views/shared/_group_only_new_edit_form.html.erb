<!--部分テンプレートにより@group➩group変更-->
<div class="sharedmargin">
  <%= render 'shared/form_error', model: group %>
  <div class="container-md">
    <%= render "shared/flash_message" %>
    <% if current_page?(action: "new") %>
      <h2 class="text-center text-white font-italic m-5">New Group</h2>
    <% else %>
      <h2 class="text-center text-white font-italic m-5">Edit Group</h2>
     <% end %>
    <div class='row mt-2'>
       <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto text-white">

        <%= form_with model:group,local:true do |f| %>
          <div class="form-group row">
              <%= f.attachment_field :image, class: "custom-file-input" %>
              <%= f.label :image, "\uf083 グループ画像を選択", class: "custom-file-label fa" %>
          </div>
          <div class="form-group row">
            <%= f.text_area :name, placeholder: "\uf007 グループ名を記述して下さい",class: "form-control fa" %>
          </div>
          <div class="form-group row">
            <%= f.text_area :introduction, placeholder: "\uf303 グループの説明文を記述して下さい", :size=>"60x10", class: "form-control fa" %>
          </div>
          <div class="form-group row">
              <%= f.submit class: 'btn btn-secondary form-control hover-img' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>